{
  "name": "imerge",
  "version": "1.0.0",
  "engines": {
    "node": "10.15.3"
  },
  "description": "Imerge",
  "main": "server.js",

  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  
  
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "axios": "^0.18.0",
    "bootstrap": "^4.3.1",
    "core-js": "^3.0.1",
    "es6": "0.0.7",
    "i18next": "^15.1.0",
    "jquery": "^3.4.1",
    "mongoose": "^5.5.5",
    "newsapi": "^2.4.0",
    "promise": "^8.0.3",
    "react": "^16.8.6",
    "react-bootstrap": "^1.0.0-beta.8",
    "react-dom": "^16.8.6",
    "react-i18next": "^10.9.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.0",
    "reactstrap": "^8.0.0",
    "typescript": "^3.4.5"
  }
}
